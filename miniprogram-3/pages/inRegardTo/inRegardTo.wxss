}

.wangzhan,.kefu,.banben{
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size:30rpx;
  font-family:SimHei;
  font-weight:400;
