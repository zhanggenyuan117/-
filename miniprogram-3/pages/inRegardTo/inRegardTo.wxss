.arrow{
  width: 10rpx;
  height: 10rpx;
  border-top: 2rpx solid #C8C8CD;
  border-right: 2rpx solid #C8C8CD;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
}
